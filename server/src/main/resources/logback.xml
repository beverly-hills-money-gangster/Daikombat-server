<configuration>

    <!-- Define the root logger with console appender and log level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Include the date in the log pattern -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

</configuration>